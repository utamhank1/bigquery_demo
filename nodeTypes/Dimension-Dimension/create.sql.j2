{# == Node Type Version        : 1  == #}
{# == Node Type Name           : Dimension  == #}
{# == Node Type Description    : This node creates dimension table,view and also override create sql for view  == #}


{# Override CreateSQL for view #}

{% if node.override.create.enabled and node.materializationType == 'view' %}
	
	{{ node.override.create.script }}

{% elif node.materializationType == 'table' %}
	{{ stage('Create Dimension Table') }}

{# CreateSQL for Table #}

	CREATE OR REPLACE TABLE {{ ref_no_link(node.location.name, node.name) }}
	(
		{% for col in columns %}
			`{{ col.name }}` {{ col.dataType }}
			{% if col.isSurrogateKey %}
		        DEFAULT GENERATE_UUID()
			{% endif %}
			{%- if col.defaultValue | length > 0 %}DEFAULT {{ col.defaultValue }}{%endif%}
		    {%if not col.nullable %} NOT NULL {% endif%}
			{%- if col.description | length > 0 %} OPTIONS(description="{{ col.description | escape }}"){% endif %}
			{%- if not loop.last -%}, {% endif %}
		{% endfor %}
	)
	{%- if node.description | length > 0 %} OPTIONS(
    description="{{ node.description | escape }}") {% endif %}
    

{% elif node.materializationType == 'view' and node.override.create.enabled == false %}
	{{ stage('Create Dimension View') }}

{# CreateSQL for View #}

	CREATE OR REPLACE VIEW {{ ref_no_link(node.location.name, node.name) }}
	(
		{% for col in columns %}
			`{{ col.name }}`
			{%- if col.description | length > 0 %} OPTIONS(description="{{ col.description | escape }}"){% endif %}
			{%- if not loop.last -%},{% endif %}
		{% endfor %}
	)
	{%- if node.description | length > 0 %} OPTIONS(
    description="{{ node.description | escape }}") {% endif %}
	AS
	{% for source in sources %}

		{% if loop.first %}SELECT {% endif %}
		{% if config.selectDistinct %}DISTINCT{% endif %}

		{% for col in source.columns %}
			{% if col.isSurrogateKey or col.isSystemUpdateDate or col.isSystemCreateDate %}
                NULL
			{% else %}
                {{ get_source_transform(col) }}
			{% endif %}
			AS `{{ col.name }}`
			{%- if not loop.last -%}, {% endif %}
		{% endfor %}
		{{ source.join }}
        {% if config.groupByAll %} GROUP BY ALL {% endif %}
		{% if not loop.last %} UNION ALL {% endif %}
	{% endfor %}

{% endif %}
