{# == Node Type Version        : 1  == #}
{# == Node Type Name           : View  == #}
{# == Node Type Description    : This node creates a view and also runs override create sql for view  == #}


{# Override CreateSQL for view #}

{% if node.override.create.enabled %}
    
    {{ node.override.create.script }}

{% else %}

{# CreateSQL for view #}

    {{ stage('Create View') }}
    CREATE OR REPLACE {% if config.secureoption %} SECURE {% endif %} VIEW {{ ref_no_link(node.location.name, node.name) }}
    (
        {% for col in columns %}
            `{{ col.name }}`
            {%- if col.description | length > 0 %} OPTIONS(description="{{ col.description | escape }}"){% endif %}
            {%- if not loop.last -%}, {% endif %}
        {% endfor %}
    )
    {%- if node.description | length > 0 %} OPTIONS(description="{{ node.description | escape }}"){% endif %}
    AS
    {% for source in sources %}
        SELECT {% if config.selectDistinct %} DISTINCT {% endif %}
        {% for col in source.columns %}
            {{ get_source_transform(col) }} AS `{{ col.name }}`
            {%- if not loop.last -%}, {% endif %}
        {% endfor %}

        {{ source.join }}
        {% if config.groupByAll %} GROUP BY ALL {% endif %}
        {% if not loop.last %}
            {% if config.insertStrategy in ['UNION DISTINCT', 'UNION ALL'] and not loop.last %}
                      {{config.insertStrategy}}
            {% endif %}
        {% endif %}
    {% endfor %}
{% endif %}
